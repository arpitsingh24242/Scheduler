datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  events   Event[]
}

model Event {
  id        Int      @id @default(autoincrement())
  message   String
  send_at   DateTime
  status    String
  retries   Int      @default(0)
  email     String
  createdAt DateTime @default(now())
  userId    Int?
  user      User?     @relation(fields: [userId], references: [id])
}
